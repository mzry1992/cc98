<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/hotPostListItem" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:orientation="vertical"
	android:gravity="left"
	android:paddingBottom="5dp" android:paddingLeft="5dp"
	android:paddingRight="5dp" android:paddingTop="5dp"
	android:background="@drawable/shape_bg">



	<TableLayout 
	    android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:stretchColumns="2">

		<TableRow>
			<TextView 
				android:layout_column="0"
            	android:id="@+id/rankingText"
                android:layout_height="wrap_content" 
                android:layout_width="wrap_content" 
                android:background="@color/grey"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:gravity="left"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginBottom="1dp">
        	</TextView>
		
			<TextView android:id="@+id/boardText"
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="1dp"
				android:layout_marginTop="3dp"
				android:layout_marginRight="20dp"
				android:gravity="left"
				android:textColor="@color/grey"
				android:textSize="12sp"
				android:layout_column="1">
			</TextView>

			<TextView android:id="@+id/authorText"
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="1dp"
				android:layout_marginTop="3dp"
				android:gravity="left"
				android:textColor="@color/grey"
				android:textSize="12sp"
				android:layout_column="2" />

			<TextView
			    android:id="@+id/timeText"
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="1dp"
				android:layout_marginTop="3dp"
				android:gravity="left"
				android:textSize="12sp"
				android:textColor="@color/grey"
				android:layout_column="3" />
		</TableRow>
